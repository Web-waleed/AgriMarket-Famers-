@model Slider
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="SliderID" />
            <div class="form-group">
                <label asp-for="SliderHeader" class="control-label"></label>
                <input asp-for="SliderHeader" class="form-control" />
                <span asp-validation-for="SliderHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderDescription" class="control-label"></label>
                <input asp-for="SliderDescription" class="form-control" />
                <span asp-validation-for="SliderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderNum" class="control-label"></label>
                <input asp-for="SliderNum" class="form-control" />
                <span asp-validation-for="SliderNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="font-weight-bold text-primary"></label>
                <input asp-for="ImageFile" class="form-control form-control-lg" type="file" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Button" class="control-label"></label>
                <input asp-for="Button" class="form-control" />
                <span asp-validation-for="Button" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
