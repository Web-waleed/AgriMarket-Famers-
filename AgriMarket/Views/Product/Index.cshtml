@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table id="my-table" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.FarmerName)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.FarmerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImg)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.FarmerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FarmerNumber)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    <img src="@item.ProductImg" alt="@item.ProductDescription" class="img-fluid" style="width:100px;height:100px" />
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" method="post" asp-route-id="@item.ProductId">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

